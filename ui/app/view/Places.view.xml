<mvc:View controllerName="bmvi.ui.app.controller.Places" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:bmvi="bmvi.ui.app.lib">
    <SplitContainer>
        <detailPages>
            <mvc:XMLView viewName="bmvi.ui.app.view.Map" />
        </detailPages>
        <masterPages>
            <Page showNavButton="true" navButtonPress=".onNavBack">
                <List mode="SingleSelectMaster" items="{/places}" selectionChange=".onItemSelected">
                    <StandardListItem selected="{= ${/selectedPlace} === ${title}}" title="{title}" type="Navigation" />
                </List>
            </Page>
        </masterPages>
    </SplitContainer>
</mvc:View>

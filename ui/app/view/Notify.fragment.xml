<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Dialog title="{i18n>NOTIFICATION_TITLE}">
        <form:SimpleForm>
            <Label text="{i18n>NOTIFICATION_DRIVER}" />
            <Text text="{dialog>/driver}" />
            <Label text="{i18n>NOTIFICATION_ROUTE}" />
            <Text text="{dialog>/route}" />
            <Label text="{i18n>NOTIFICATION_LABEL}" />
            <TextArea width="100%" value="{dialog>/comment}" />
        </form:SimpleForm>
        <buttons>
            <Button text="{i18n>SEND}" press=".onNotificationSend" />
            <Button text="{i18n>CANCEL}" press=".onDialogClose" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
